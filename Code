#include <iostream>
using namespace std;
#include <ctype.h>
#include <cstring>
#include <string>
#include "CamelT"
#include "Actions"
#include "Setup"
#include "PTkt"

int main()
{
    char c;
    cout << " Welcome to Camel Up!\n A game where camel racing betting is encouraged!\n";
    cout <<"\n";
    
    start();
    ticket(0);
    
    cout<<"\n";
    int h = 1;
    while (h <= 5)
    {
        c = actions();
        switch (c)
        {
            case 'A':
                cout << "Action under development\n";
                break;
            case 'B':
                cout << "Action under development\n";
                break;
            case 'C':
                ticket(h);
                token();
                break;
            case 'D':
                cout << "Action under development\n";
                break;
        }
        
        h++;
    }
  
  return 0;
}
